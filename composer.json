{
  "name": "darkghosthunter/transbank-api",
  "description": "Transbank SDK no oficial para PHP 7.4+",
  "keywords": [
    "payments",
    "transbank",
    "api",
    "sdk"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Italo Baeza C",
      "email": "yo@italobc.com",
      "homepage": "http://italobc.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^7.4||^8.0",
    "ext-curl": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-dom": "*",
    "ext-soap": "*",
    "luisurrutia/transbank-soap": "0.0.1",
    "robrichards/xmlseclibs": "3.0.4",
    "guzzlehttp/guzzle": "^7.0",
    "psr/log": "^1.0.1",
    "darkghosthunter/fluid": "^1.2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.3",
    "mockery/mockery": "^1.4.1"
  },
  "autoload": {
    "psr-4": {
      "DarkGhostHunter\\TransbankApi\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\" : "tests"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit --coverage-clover build/logs/clover.xml",
    "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
  },
  "config": {
    "sort-packages": true
  }
}
